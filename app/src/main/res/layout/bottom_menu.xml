<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rd_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/rd_group"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rd_focus"
            android:text="发现"
            android:checked="true"
            android:drawableTop="@drawable/ic_loading_rotate"
            style="@style/button_tag_style"/>
        <RadioButton
            android:id="@+id/rd_find"
            android:text="寻找"
            android:drawableTop="@drawable/ic_loading_rotate"
            style="@style/button_tag_style"/>
        <RadioButton
            android:id="@+id/rd_question"
            android:text="问答"
            android:drawableTop="@drawable/ic_loading_rotate"
            style="@style/button_tag_style"/>
        <RadioButton
            android:id="@+id/rd_campus"
            android:text="校园"
            android:drawableTop="@drawable/ic_loading_rotate"
            style="@style/button_tag_style"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
